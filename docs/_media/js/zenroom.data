local tuple = require "tuple"

-- module faces
local faces = {}

local globals = {}
_G = setmetatable(_G, {
                    __index=function(self,k) return rawget(self,k) or globals[k] end,
                    
                    __newindex=function(self,k,v)
                      assert(not globals[k], ("Forbidden declaration of reserved global %s"):format(k))
                      rawset(self,k,v)
                    end,
