}

@test "HASH API :: Final SHA256" {
    run_exec hash_final `cat ctx_sha256_448` > hash_sha256_448
    save hash_sha256_448
    assert_output 'z7iNb68t46adNhlazsLiVeKvK32TOZfzSOCfbOV1g2A='
}
